<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vista.actividades.ActividadProducto">

    <TextView
        android:id="@+id/lblPlaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Placa" />

    <EditText
        android:id="@+id/idPlaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <TextView
        android:id="@+id/lblModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Modelo" />
    <EditText
        android:id="@+id/idModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        />
    <TextView
        android:id="@+id/lblMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Marca" />
    <EditText
        android:id="@+id/idMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"/>


    <TextView
        android:id="@+id/lblAnio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Anio" />

    <EditText
        android:id="@+id/idAnio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textVerAutos"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAgregarAuto"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text=" + " />

        <Button
            android:id="@+id/btnBuscarAuto"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:text="Buscar" />

        <Button
            android:id="@+id/btnListarA"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:text="Listar" />

        <Button
            android:id="@+id/btnEliminarAllAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eli.T" />

        <Button
            android:id="@+id/btnEliminarSeleccionAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eli.S" />

        <Button
            android:id="@+id/btnEditarAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idrecyclerAuto"
        android:layout_width="245dp"
        android:layout_height="250dp">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>